{
	"name": "bmartel/phperclip",
	"description": "File attachment and management for Eloquent models",
	"keywords": ["file","model","eloquent","attachment"],
	"homepage": "https://github.com/bmartel/phperclip",
	"authors": [
		{
			"name": "Brandon Martel",
			"email": "b.martel@bmartel.com"
		}
	],
	"license": "MIT",
	"require": {
		"php": ">=5.4.0",
		"aws/aws-sdk-php": "2.5.*",
		"illuminate/http": "4.2.*",
        "illuminate/database": "4.2.*",
        "illuminate/config": "4.2.*",
		"intervention/image": "2.0.*"
	},
	"require-dev" : {
		"phpspec/phpspec": "2.0.*@dev",
		"mockery/mockery": "0.9.*@dev"
	},
	"suggest": {
		"cviebrock/image-validator": "Extra Laravel validation rules for dealing with images."
	},
	"autoload": {
		"classmap": [
			"src/migrations"
		],
		"psr-0": {
			"Bmartel\\Phperclip": "src/"
		}
	},
	"minimum-stability": "dev"
}
