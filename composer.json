{
	"name": "tippingcanoe/phperclip",
	"description": "File attachment and management for Eloquent models",
	"keywords": ["file","model","eloquent","attachment"],
	"homepage": "https://github.com/bmartel/phperclip",
	"authors": [
		{
			"name": "Brandon Martel",
			"email": "b.martel@tippingcanoe.com"
		}
	],
	"license": "MIT",
	"require": {
		"php": ">=5.4.0",
		"aws/aws-sdk-php": "2.5.2",
        "illuminate/support": "4.2.*",
        "illuminate/database": "4.2.*",
        "illuminate/config": "4.2.*"
	},
	"require-dev" : {
		"phpspec/phpspec": "2.0.*@dev",
		"mockery/mockery": "0.9.*@dev"
	},
	"autoload": {
		"classmap": [
			"src/migrations"
		],
		"psr-0": {
			"TippingCanoe\\Phperclip": "src/"
		}
	},
	"minimum-stability": "dev"
}
