{
	"name": "tippingcanoe/phperclip",
	"description": "File attachment and management for Eloquent models",
	"keywords": ["file","model","eloquent","attachment"],
	"homepage": "https://github.com/bmartel/phperclip",
	"authors": [
		{
			"name": "Brandon Martel",
			"email": "b.martel@tippingcanoe.com"
		}
	],
	"license": "MIT",
	"require": {
		"php": ">=5.4.0",
	  	"illuminate/filesystem": "~5.0",
	  	"illuminate/database": "~5.0",
	  	"illuminate/config": "~5.0",
		"intervention/image": "~2.0"
	},
	"require-dev" : {
		"phpspec/phpspec": "~2.0",
		"mockery/mockery": "~0.9"
	},
	"suggest": {
		"cviebrock/image-validator": "Extra Laravel validation rules for dealing with images."
	},
	"autoload": {
		"classmap": [
			"src/migrations"
		],
		"psr-4": {
			"TippingCanoe\\Phperclip\\": "src/"
		}
	},
	"minimum-stability": "dev"
}
